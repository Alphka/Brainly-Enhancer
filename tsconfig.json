{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"module": "ESNext",
		"target": "ES5",
		"lib": [
			"ES2015.Promise",
			"DOM"
		],
		"typeRoots": [
			"node_modules/@types",
			"./typings"
		]
	},
	"include": [
		"./src/**/*.ts",
		"./typings"
	]
}
